{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": ["site/**/*.ts", "core/**/*.ts", "tools/**/*.ts", "admin/**/*.ts", "reference/**/*.ts", "entry/**/*.ts", "system/**/*.ts"]
}
